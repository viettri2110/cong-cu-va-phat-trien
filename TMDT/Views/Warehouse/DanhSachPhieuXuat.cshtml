@model IEnumerable<TMDT.Models.WarehouseIssueListViewModel>
@{
    ViewBag.Title = "Danh sách phiếu xuất kho";
    Layout = "~/Views/Shared/_Dashboard_1.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Danh sách phiếu xuất kho</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("DashboardKho", "Warehouse")">Dashboard</a></li>
                        <li class="breadcrumb-item active">Phiếu xuất kho</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><i class="fas fa-file-export"></i> Danh sách phiếu xuất</h3>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-hover" id="issueTable">
                        <thead>
                            <tr>
                                <th>Mã phiếu</th>
                                <th>Ngày xuất</th>
                                <th>Loại xuất</th>
                                <th>Đơn hàng</th>
                                <th>Người mua</th>
                                <th>Tổng SL</th>
                                <th>Trạng thái</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var issue in Model)
                            {
                                <tr>
                                    <td><strong>@issue.issueCode</strong></td>
                                    <td>@issue.issueDate.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@issue.issueType</td>
                                    <td>
                                        @if (issue.idOrder.HasValue)
                                        {
                                            <span class="badge badge-primary">#@issue.idOrder</span>
                                        }
                                        else
                                        {
                                            <span>-</span>
                                        }
                                    </td>
                                    <td>@(string.IsNullOrEmpty(issue.buyerName) ? "-" : issue.buyerName)</td>
                                    <td><strong>@issue.totalQuantity</strong></td>
                                    <td>
                                        <span class="badge badge-info">@issue.status</span>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("ChiTietPhieuXuat", "Warehouse", new { id = issue.idIssue })" 
                                           class="btn btn-sm btn-info" title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#issueTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Vietnamese.json"
                },
                "order": [[1, "desc"]]
            });
        });
    </script>
}
