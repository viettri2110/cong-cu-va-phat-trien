@model TMDT.Models.ProductInventoryHistoryViewModel
@{
    ViewBag.Title = "Lịch sử nhập xuất";
    Layout = "~/Views/Shared/_Dashboard_1.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Lịch sử nhập xuất</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("DashboardKho", "Warehouse")">Dashboard</a></li>
                        <li class="breadcrumb-item active">Lịch sử nhập xuất</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            @if (Model.ProductInfo != null)
            {
                <div class="card card-primary card-outline">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-2">
                                <img src="@Url.Content("~/Assets/ImageProduct/" + Model.ProductInfo.imageProduct_1)" 
                                     class="img-fluid" alt="@Model.ProductInfo.nameProduct" />
                            </div>
                            <div class="col-md-10">
                                <h4>@Model.ProductInfo.nameProduct</h4>
                                <p>
                                    <strong>Danh mục:</strong> @Model.ProductInfo.categoryName<br />
                                    <strong>Giá bán:</strong> @String.Format("{0:N0}", Model.ProductInfo.priceProduct) đ<br />
                                    <strong>Tồn kho hiện tại:</strong> <span class="badge badge-success">@Model.ProductInfo.currentStock</span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><i class="fas fa-history"></i> Lịch sử biến động</h3>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Thời gian</th>
                                <th>Loại</th>
                                <th>Mã tham chiếu</th>
                                <th>SL trước</th>
                                <th>Biến động</th>
                                <th>SL sau</th>
                                <th>Ghi chú</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var history in Model.HistoryList)
                            {
                                <tr>
                                    <td>@history.changeDate.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        @if (history.changeType == "Nhập")
                                        {
                                            <span class="badge badge-success"><i class="fas fa-arrow-down"></i> @history.changeType</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger"><i class="fas fa-arrow-up"></i> @history.changeType</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(history.referenceCode))
                                        {
                                            <strong>@history.referenceCode</strong>
                                        }
                                        else
                                        {
                                            <span>-</span>
                                        }
                                    </td>
                                    <td>@history.quantityBefore</td>
                                    <td>
                                        <strong class="@(history.quantityChange > 0 ? "text-success" : "text-danger")">
                                            @(history.quantityChange > 0 ? "+" : "")@history.quantityChange
                                        </strong>
                                    </td>
                                    <td><strong>@history.quantityAfter</strong></td>
                                    <td>@history.notes</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>
