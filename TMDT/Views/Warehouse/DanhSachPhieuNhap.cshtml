@model IEnumerable<TMDT.Models.WarehouseReceiptListViewModel>
@{
    ViewBag.Title = "Danh sách phiếu nhập kho";
    Layout = "~/Views/Shared/_Dashboard_1.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Danh sách phiếu nhập kho</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("DashboardKho", "Warehouse")">Dashboard</a></li>
                        <li class="breadcrumb-item active">Phiếu nhập kho</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><i class="fas fa-file-import"></i> Danh sách phiếu nhập</h3>
                    <div class="card-tools">
                        <a href="@Url.Action("NhapHang", "Warehouse")" class="btn btn-success btn-sm">
                            <i class="fas fa-plus"></i> Tạo phiếu nhập mới
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-hover" id="receiptTable">
                        <thead>
                            <tr>
                                <th>Mã phiếu</th>
                                <th>Ngày nhập</th>
                                <th>Loại nhập</th>
                                <th>Nhà cung cấp</th>
                                <th>Tổng SL</th>
                                <th>Trạng thái</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var receipt in Model)
                            {
                                <tr>
                                    <td><strong>@receipt.receiptCode</strong></td>
                                    <td>@receipt.receiptDate.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@receipt.receiptType</td>
                                    <td>@(string.IsNullOrEmpty(receipt.supplierInfo) ? "-" : receipt.supplierInfo)</td>
                                    <td><strong>@receipt.totalQuantity</strong></td>
                                    <td>
                                        <span class="badge badge-success">@receipt.status</span>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("ChiTietPhieuNhap", "Warehouse", new { id = receipt.idReceipt })" 
                                           class="btn btn-sm btn-info" title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#receiptTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Vietnamese.json"
                },
                "order": [[1, "desc"]]
            });
        });
    </script>
}
