@{
    ViewBag.Title = "Đặt hàng thành công";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <!-- fontawesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css" />
    <!-- font gg -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@300;400;700&display=swap" rel="stylesheet" />
    <!-- BS4 -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Roboto Condensed', sans-serif;
        }
        .success-container {
            background-color: white;
            border-radius: 20px;
            padding: 50px;
            box-shadow: 0 10px 50px rgba(0,0,0,0.3);
            text-align: center;
            max-width: 600px;
            animation: slideDown 0.5s ease-out;
        }
        @@keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-50px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        .success-icon {
            font-size: 80px;
            color: #28a745;
            animation: scaleIn 0.5s ease-out 0.3s both;
        }
        @@keyframes scaleIn {
            from {
                transform: scale(0);
            }
            to {
                transform: scale(1);
            }
        }
        .success-title {
            color: #28a745;
            font-size: 32px;
            font-weight: bold;
            margin: 20px 0;
        }
        .success-message {
            color: #666;
            font-size: 18px;
            line-height: 1.8;
            margin: 20px 0;
        }
        .btn-home {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            color: white;
            padding: 15px 40px;
            font-size: 18px;
            font-weight: bold;
            border-radius: 50px;
            border: none;
            text-decoration: none;
            display: inline-block;
            margin: 20px 10px;
            transition: all 0.3s;
        }
        .btn-home:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 20px rgba(40, 167, 69, 0.4);
            color: white;
            text-decoration: none;
        }
        .btn-orders {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 15px 40px;
            font-size: 18px;
            font-weight: bold;
            border-radius: 50px;
            border: none;
            text-decoration: none;
            display: inline-block;
            margin: 20px 10px;
            transition: all 0.3s;
        }
        .btn-orders:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
            color: white;
            text-decoration: none;
        }
        .order-details {
            background-color: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            margin: 20px 0;
            text-align: left;
        }
    </style>
</head>
<body>
    <div class="success-container">
        <div class="success-icon">
            <i class="fas fa-check-circle"></i>
        </div>
        <h1 class="success-title">ĐẶT HÀNG THÀNH CÔNG!</h1>
        
        @if (ViewBag.Message != null)
        {
            <div class="order-details">
                @Html.Raw(ViewBag.Message)
            </div>
        }
        
        <div class="success-message">
            <p><i class="fas fa-shipping-fast" style="color: #28a745;"></i> Đơn hàng của bạn đã được ghi nhận</p>
            <p><i class="fas fa-phone" style="color: #28a745;"></i> Chúng tôi sẽ liên hệ với bạn sớm nhất</p>
            <p><i class="fas fa-money-bill-wave" style="color: #28a745;"></i> Thanh toán khi nhận hàng (COD)</p>
        </div>

        <div style="margin-top: 30px;">
            <a href="@Url.Action("TrangChu", "Home")" class="btn-home">
                <i class="fas fa-home"></i> Về trang chủ
            </a>
            <a href="@Url.Action("DanhSachMuaHang", "Buyer")" class="btn-orders">
                <i class="fas fa-shopping-bag"></i> Xem đơn hàng
            </a>
        </div>

        <div style="margin-top: 30px; color: #999; font-size: 14px;">
            <p><i class="fas fa-info-circle"></i> Cảm ơn bạn đã tin tưởng và mua hàng tại ChoDoCu!</p>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
