@model List<TMDT.Models.ChatBotUserViewModel>
@{
    ViewBag.Title = "Quản lý ChatBot";
    Layout = "~/Views/Shared/_Dashboard_1.cshtml";
}

<style>
    .chatbot-item {
        display: flex;
        padding: 15px;
        border-bottom: 1px solid #eee;
        cursor: pointer;
        transition: background 0.3s;
        background: white;
    }
    
    .chatbot-item:hover {
        background: #f8f9fa;
    }
    
    .chatbot-item-avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 24px;
        margin-right: 15px;
    }
    
    .chatbot-item-content {
        flex: 1;
    }
    
    .chatbot-item-header {
        display: flex;
        justify-content: space-between;
        margin-bottom: 5px;
    }
    
    .chatbot-item-name {
        font-weight: bold;
        color: #333;
    }
    
    .chatbot-item-time {
        font-size: 12px;
        color: #999;
    }
    
    .chatbot-item-message {
        font-size: 14px;
        color: #666;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    
    .unread-badge {
        background: #ff4757;
        color: white;
        border-radius: 12px;
        padding: 2px 8px;
        font-size: 11px;
        font-weight: bold;
        margin-right: 5px;
    }
    
    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #999;
    }
    
    .empty-state i {
        font-size: 64px;
        margin-bottom: 20px;
        color: #ddd;
    }
</style>

<div class="content-wrapper">
    <!-- Content Header -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark"><i class="fas fa-robot"></i> Quản lý ChatBot</h1>
                </div>
                <div class="col-sm-6">
                    <div class="float-right">
                        <span class="badge badge-info">Tổng: @Model.Count người dùng</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Thống kê -->
            <div class="row mb-3">
                <div class="col-lg-3 col-6">
                    <div class="small-box bg-info">
                        <div class="inner">
                            <h3>@Model.Count</h3>
                            <p>Tổng người dùng chat</p>
                        </div>
                        <div class="icon">
                            <i class="fas fa-users"></i>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-6">
                    <div class="small-box bg-warning">
                        <div class="inner">
                            <h3>@Model.Sum(x => x.unreadCount)</h3>
                            <p>Tin nhắn chưa đọc</p>
                        </div>
                        <div class="icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-6">
                    <div class="small-box bg-success">
                        <div class="inner">
                            <h3>@Model.Count(x => x.lastMessageDate.HasValue && x.lastMessageDate.Value.Date == DateTime.Now.Date)</h3>
                            <p>Chat hôm nay</p>
                        </div>
                        <div class="icon">
                            <i class="fas fa-calendar-day"></i>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-6">
                    <div class="small-box bg-danger">
                        <div class="inner">
                            <h3>@Model.Count(x => x.unreadCount > 0)</h3>
                            <p>Cần trả lời</p>
                        </div>
                        <div class="icon">
                            <i class="fas fa-bell"></i>
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.Any())
            {
                <div class="card">
                    <div class="card-header bg-gradient-primary">
                        <h3 class="card-title"><i class="fas fa-list"></i> Danh sách người dùng đã chat</h3>
                    </div>
                    <div class="card-body p-0">
                        @foreach (var user in Model)
                        {
                            <div class="chatbot-item" onclick="location.href='@Url.Action("ChatBotDetail", "Chat", new { idUser = user.idUser })'">
                                <div class="chatbot-item-avatar">
                                    <i class="fas fa-user"></i>
                                </div>
                                <div class="chatbot-item-content">
                                    <div class="chatbot-item-header">
                                        <div class="chatbot-item-name">
                                            @user.userName
                                        </div>
                                        <div class="chatbot-item-time">
                                            @if (user.lastMessageDate.HasValue)
                                            {
                                                @user.lastMessageDate.Value.ToString("dd/MM/yyyy HH:mm")
                                            }
                                        </div>
                                    </div>
                                    <div style="font-size: 12px; color: #999; margin-bottom: 5px;">
                                        @user.userEmail
                                    </div>
                                    <div class="chatbot-item-message">
                                        @if (user.unreadCount > 0)
                                        {
                                            <span class="unread-badge">@user.unreadCount</span>
                                        }
                                        @(user.lastMessage ?? "Chưa có tin nhắn")
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body">
                        <div class="empty-state">
                            <i class="fas fa-robot"></i>
                            <h4>Chưa có tin nhắn ChatBot nào</h4>
                            <p>Người dùng chưa gửi tin nhắn qua ChatBot</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
</div>
